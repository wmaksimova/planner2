<Window x:Name="window_planner" x:Class="planner3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:planner3"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        Title="MainWindow" Height="530" Width="586.538">
    <Grid>
        <Canvas x:Name="canvas_planner" Margin="0,0,0,-30" Height="530">
            <Canvas.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF81FFEF" Offset="0"/>
                    <GradientStop Color="#FFF067B4" Offset="1"/>
                </LinearGradientBrush>
            </Canvas.Background>
            <Image x:Name="calendar_image" Source="Resources/new_calendar.png" Width="30" Height="30" Canvas.Left="10" Canvas.Top="10"/>
            <Button Width="30" Height="30" Canvas.Left="10" Canvas.Top="10" RenderTransformOrigin="0.456,0.473"
                    Background="Transparent" BorderBrush="Transparent" Foreground="Transparent" Click="Button_Click"/>
            <TextBox x:Name="date_text" Canvas.Left="40" Canvas.Top="10" Width="182" Height="30"
                     Background="Transparent" SelectionBrush="Transparent" BorderBrush="Transparent" FontSize="20" IsReadOnlyCaretVisible="True"></TextBox>
            <Calendar x:Name="calendar_planner" Canvas.Left="45" Canvas.Top="10" Visibility="Hidden" SelectedDatesChanged="calendar_planner_SelectedDatesChanged"></Calendar>
            <TextBox Canvas.Left="10" Canvas.Top="65" BorderBrush="Transparent" Background="Transparent" FontSize="18">Сколько дел запланировано на сегодня?</TextBox>
            
        </Canvas>
    </Grid>
</Window>
